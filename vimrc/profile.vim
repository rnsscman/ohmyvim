colorscheme desert

syntax on
filetype on

set number
set ruler
set visualbell
set showmatch
" tab and space, second way from :help tabstop
set tabstop=4
set shiftwidth=4
set expandtab
" indent
set autoindent
set cindent
set smartindent
" search
set hlsearch
set incsearch
set nowrapscan
set ignorecase
set smartcase
set clipboard=unnamedplus
